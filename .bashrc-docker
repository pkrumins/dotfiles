ffmpeg-docker () {
    docker run -it --rm \
        --device /dev/dri \
        -v $HOME/Downloads:/home/app/Downloads \
        -v $HOME/VLC:/home/app/VLC \
        --name ffmpeg \
        ffmpeg "$@"
}

vlc-docker () {
    local files="$@"

    docker run -d -it --rm \
        --device /dev/snd \
        --device /dev/dri \
        -e DISPLAY=$DISPLAY \
        -e PULSE_SERVER=unix:/run/user/$UID/pulse/native \
        -v /tmp/.X11-unix:/tmp/.X11-unix \
        -v $HOME/VLC:/home/app/VLC \
        -v /run/user/$UID/pulse:/run/user/$UID/pulse \
        --name vlc \
        vlc --no-qt-privacy-ask "$files"
  }

