lamp-docker () {
    local -r mysql_data_dir="$HOME/.dockerdata/mysql"
    if [[ ! -d "$mysql_data_dir" ]]; then
        mkdir -p "$mysql_data_dir"
    fi

    docker run -d -it --rm \
        --network lamp \
        --ip 10.10.10.10 \
        -p 3306:3306 \
        -p 80:80 \
        -v /etc/hosts:/etc/hosts \
        -v $HOME/projects:/home/app/projects \
        --name lamp \
        lamp
}

