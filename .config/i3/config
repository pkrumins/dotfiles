# Autostart urxvt on workspace 1
exec --no-startup-id i3-msg 'workspace 1; exec urxvt'

# Autostart urxvt on workspace 2
exec --no-startup-id i3-msg 'workspace 2; exec urxvt -name ws2 -geometry 142x36-70-120 -e tmux -f ~/.tmux-ws2.conf a'
assign [instance="ws2"] workspace 2
for_window [instance="ws2"] floating enable

# Autostart gmail on workspace 3
assign [class="gmail"] workspace 3
exec --no-startup-id i3-msg 'workspace 3; exec bash -i -c gmail'

# Autostart doublecmd on workspace 7
assign [class="Double Commander"] workspace dc
for_window [class="Double Commander" title="Find files"] floating enable
for_window [class="Double Commander" title="Copying"] floating enable
exec --no-startup-id i3-msg 'workspace dc; exec bash -i -c doublecmd'

# Enable workspace 8 and switch to workspace 3
exec --no-startup-id i3-msg 'workspace 8; workspace 3'

# Show calendar on alt+c
for_window [instance="calendar"] floating enable sticky enable
for_window [instance="calendar"] resize set 600 600
for_window [instance="calendar"] move position center
for_window [instance="calendar"] border pixel 3
bindsym $mod+c exec --no-startup-id bash -i ~/bin/i3-show-or-hide-calendar.sh

# Autostart R scratchpad
bindsym $mod+m [instance="math"] scratchpad show; [instance="math"] move position center
for_window [instance="math"] floating enable sticky enable
